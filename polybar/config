[global/wm]
margin-top = 10
margin-bottom = 0

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true
fomart = <bar>
bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─

[module/date]
type = internal/date
interval = 1.0
date-alt = %A, %d %B '%y 
time-alt = %H:%M:%S
date = %a %d/%m/%y
time = %H:%M
label = %time%  %date%

[module/powermenu]
type = custom/menu

expand-right = false

format-padding = 2

label-close = ⏼
label-open-foreground = #f07f7f
label-open = ⏻
label-close-foreground = #ed9a9a
label-separator = |
label-separator-padding = 2
label-separator-foreground = #e9e9e9

menu-0-0 = Reboot 
menu-0-0-exec = menu-open-1
menu-0-1 = Power Off
menu-0-1-exec = menu-open-2
menu-0-2 = Log Off
menu-0-2-exec = menu-open-3

menu-1-1 = Cancel
menu-1-1-exec = menu-open-0
menu-1-0 = Reboot
menu-1-0-exec = reboot

menu-2-0 = Power off
menu-2-0-exec = poweroff
menu-2-1 = Cancel
menu-2-1-exec = menu-open-0

menu-3-0 = Log off
menu-3-0-exec = pkill -KILL -u $USER
menu-3-1 = Cancel
menu-3-1-exec = menu-open-0


[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = :) %percentage%%
label-discharging = %percentage%%

[module/i3-volume]
type = custom/script
tail = true
label = %output%
exec = ~/i3-volume/volume listen "%i %v %p\n"
scroll-up = ~/i3-volume/volume up
scroll-down = ~/i3-volume/volume down
click-left = ~/i3-volume/volume mute
click-right = exec pavucontrol &

[module/wireless-network]
type = internal/network
interface = wlan0
interval = 3.0
format-connected = <label-connected>
label-connected = %downspeed%
format-disconnected = <label-disconnected>
label-disconnected = no wifi

[module/cpu]
type = internal/cpu
interval = 1
format = <label> 
label = CPU: %percentage%%

[module/i3]
